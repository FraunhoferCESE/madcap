<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/madcap_main_light</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/madcap_main_light</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:colorForeground">@color/madcap_main_color</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
    </style>


    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
    </style>

    <style name="DarkButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="headerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
