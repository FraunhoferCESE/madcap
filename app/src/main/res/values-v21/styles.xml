<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MadcapTheme" parent="AppTheme">
        <item name="colorPrimary">@color/madcap_main_light</item>
        <item name="colorPrimaryDark">@color/madcap_main_color</item>
        <item name="colorAccent">@color/madcap_main_light</item>
        <item name="android:colorForeground">@color/madcap_main_color</item>
        <item name="android:navigationBarColor">@android:color/widget_edittext_dark</item>
        <item name="android:statusBarColor">@color/madcap_black</item>
    </style>

    <style name="MadcapTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>