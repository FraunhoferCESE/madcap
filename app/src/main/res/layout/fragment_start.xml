<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.fraunhofer.cese.madcap.StartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/warningBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/warningBlock_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_warning_black"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/warningBlock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/warningBlock_icon"
                android:text="Permissions missing"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/app_main_color"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/warningBlock_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/warningBlock_text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Grant now" />
        </RelativeLayout>

        <TextView
            android:id="@+id/usernameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="18dp"
            android:layout_below="@id/warningBlock"/>

        <TextView
            android:id="@+id/controlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameTextview"
            android:autoLink="all"
            android:text="@string/introText"
            android:textColor="#000"
            android:textIsSelectable="true" />


        <RelativeLayout
            android:id="@+id/dataCollectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/controlText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/collectDataSwitchText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/collectionDataStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/switch1"
                android:text="@string/datacollectionstatus" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dataCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataCollectionLayout"
            android:text="@string/dataCountText"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataCountText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/sendButtonText" />

        <ProgressBar
            android:id="@+id/uploadProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadButton"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/lastUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadProgressBar"
            android:text="@string/last_upload_text"
            android:textIsSelectable="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/uploadDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastUpload"
            android:text=""
            android:textColor="#000"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/uploadCompleteness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadDate"
            android:text=""
            android:textColor="#000"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/uploadResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uploadCompleteness"
            android:text="@string/uploadResultText"
            android:textColor="#000"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/versionNumberStartFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/versionIntro" />

    </RelativeLayout>

</FrameLayout>
